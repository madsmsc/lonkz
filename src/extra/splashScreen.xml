<?xml version="1.0" encoding="UTF-8"?>
<nifty>
    <screen id="start" controller="mygame.Menu">
        <layer id="mainLayer"
          backgroundColor="#dddddd95" childLayout="vertical">

            <panel id="SPACER1" backgroundColor="#0000" height="10%" width="100%"
             align="center" childLayout="center" visibleToMouse="false">
            </panel>

            <panel id="logoLayer" align="center" height="20%" width="50%"
             backgroundColor="#0000" childLayout="horizontal">

                <panel id="lonkz" height="50%" width="20%"
                backgroundColor="#ffffff95" childLayout="center" visibleToMouse="false">
                    <text id="text" font="Interface/Fonts/CourierNew.fnt" color="#000F"
                    text="L" align="center" valign="center" />
                </panel>

                <panel id="lonkz" height="1%" width="1%" childLayout="center"
                backgroundColor="#0000"  visibleToMouse="false">
                    <text id="text" font="Interface/Fonts/CourierNew.fnt" color="#000F"
                    text=" " align="center" valign="center" />
                </panel>

                <panel id="lonkz" height="50%" width="20%"
                backgroundColor="#ffffff95" childLayout="center" visibleToMouse="false">
                    <text id="text" font="Interface/Fonts/CourierNew.fnt" color="#000F"
                    text="O" align="center" valign="center" />
                </panel>

                <panel id="lonkz" height="1%" width="1%" childLayout="center"
                backgroundColor="#0000"  visibleToMouse="false">
                    <text id="text" font="Interface/Fonts/CourierNew.fnt" color="#000F"
                    text=" " align="center" valign="center" />
                </panel>

                <panel id="lonkz" height="50%" width="20%"
                backgroundColor="#ffffff95" childLayout="center" visibleToMouse="false">
                    <text id="text" font="Interface/Fonts/CourierNew.fnt" color="#000F"
                    text="N" align="center" valign="center" />
                </panel>

                <panel id="lonkz" height="1%" width="1%" childLayout="center"
                backgroundColor="#0000"  visibleToMouse="false">
                    <text id="text" font="Interface/Fonts/CourierNew.fnt" color="#000F"
                    text=" " align="center" valign="center" />
                </panel>

                <panel id="lonkz" height="50%" width="20%"
                backgroundColor="#ffffff95" childLayout="center" visibleToMouse="false">
                    <text id="text" font="Interface/Fonts/CourierNew.fnt" color="#000F"
                    text="K" align="center" valign="center" />
                </panel>

                <panel id="lonkz" height="1%" width="1%" childLayout="center"
                backgroundColor="#0000"  visibleToMouse="false">
                    <text id="text" font="Interface/Fonts/CourierNew.fnt" color="#000F"
                    text=" " align="center" valign="center" />
                </panel>

                <panel id="lonkz" height="50%" width="20%"
                backgroundColor="#ffffff95" childLayout="center" visibleToMouse="false">
                    <text id="text" font="Interface/Fonts/CourierNew.fnt" color="#000F"
                    text="Z" align="center" valign="center" />
                </panel>
            </panel>

            <panel id="logoLayer" align="center" height="20%" width="22%"
             backgroundColor="#0000" childLayout="horizontal">
                <text id="text" font="Interface/Fonts/CourierNew.fnt" color="#000F"
                    text="Welcome to cube world!" align="center" valign="center" />
            </panel>

            <panel id="SPACER2" height="10%" width="100%" align="center"
             backgroundColor="#0000" childLayout="center" visibleToMouse="false">
            </panel>

            <panel id="continue" height="6%" width="30%" align="center"
             backgroundColor="#BBBF" childLayout="center" visibleToMouse="true">
                <interact onClick="toMenuItem()"/>
                <effect>
                    <onActive name="border" color="#fff" border="2px" />
                    <onHover name="pulsate" scaleFactor="0.008" startColor="#sd02"
	           endColor="#sd02" post="true"/>
                </effect>
                <text id="text" font="Interface/Fonts/CourierNew.fnt" color="#000F"
	      text="Click to continue..." align="center" valign="center" />
            </panel>

        </layer>
    </screen>
</nifty>